<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/background_floating_material_light">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fill up the  following :"
                android:id="@+id/textView5"
                android:textStyle="italic"
                android:textColor="@android:color/holo_orange_light"
                />

            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="AD Title :"
                    android:id="@+id/textView2"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText1"
                    android:textStyle="bold"
                    />
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Description :"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:id="@+id/textView3"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_subhead_material" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Area : "
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:id="@+id/textViewArea"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_subhead_material" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText3"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Contact :"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:textColor="@android:color/primary_text_light_nodisable" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"

                    />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button2"
                android:background="@drawable/photo_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:onClick="pickImage" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding_material" />

            <com.dd.processbutton.iml.SubmitProcessButton
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publish"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:background="#1E88E5"
                android:textColor="@color/white"
                android:onClick="addAD"
                android:padding="@dimen/abc_dropdownitem_text_padding_right"
                android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_marginRight="@dimen/abc_action_bar_icon_vertical_padding_material"
                custom:pb_textComplete="Done"
                custom:pb_textProgress="Loading"

                custom:pb_colorComplete="#FF0CA333"
                custom:pb_colorNormal="#FF6186B9"
                custom:pb_colorPressed="#FF6186B9"
                custom:pb_colorProgress="#FFB73070"
                custom:pb_textError="Error"
                custom:pb_colorError="@color/red_error"

                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:textSize="@dimen/abc_text_size_headline_material" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>